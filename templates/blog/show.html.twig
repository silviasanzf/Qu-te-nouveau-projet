{# templates/blog/show.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <div>
        <h1>Real articles title : {{ article.title }}</h1>
        <h2>Category : {{ category.name }}</h2>
        <p>{{ article.content }}</p>
    </div>
    <strong>Tags :</strong>
    <ul>
        {% for tags in tag %}
            <li>{{ tags.name }} </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>
    <a href="{{ path('homepage') }}">
        Back to homepage.
    </a>

{% endblock %}